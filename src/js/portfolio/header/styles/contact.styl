.contact
    display grid
    grid-template-columns repeat(6, 1fr)
    grid-template-rows auto auto
    grid-gap 10px 0
    justify-items center

    a
        color white

        +below(320px)
            text-align center

            h4
                margin 0

    a:nth-child(1)
        grid-column 1 / span 3

        +below(320px)
            grid-column 1 / span 6
            margin-top 20px

    a:nth-child(2)
        grid-column 4 / span 3
        
        +below(320px)
            grid-column 1 / span 6
            margin-top 20px

    a:nth-child(3)
        grid-column 3 / span 1
        margin-top 20px

    a:nth-child(4)
        grid-column 4 / span 1
        margin-top 20px

    h4
        margin-bottom 5px

        span
            margin-right 7px