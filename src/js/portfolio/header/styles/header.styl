.header
    background-image url("../../../../images/space.jpg")
    height 270px
    
    +below(768px)
        height 600px

.header > div
    padding-top 35px
    display grid
    grid-template-columns 350px 1fr
    align-items center

    +below(768px)
        grid-template-columns 1fr
        grid-template-rows 1fr
        justify-items center