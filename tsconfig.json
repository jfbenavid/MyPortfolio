{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "ES6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "hooks": ["util/hooks"],
      "util": ["util"],
      "services": ["services"]
    },
    "lib": [
      "DOM",
      "ESNext"
    ]
  }
}