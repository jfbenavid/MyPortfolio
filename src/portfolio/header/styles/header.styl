.header
    background-image url("../../../../images/space.png")
    height 290px
    
    +above(1440px)
        background-image url("../../../../images/space-large.png")

    +below(768px)
        background-image url("../../../../images/space-tablet.png")
        height 520px
    
    +below(450px)
        background-image url("../../../../images/space-phone.png")
        height 620px

.hero
    display grid
    grid-template-columns 1fr 2fr
    grid-template-rows 35px 1fr

    +below(768px)
        grid-template-columns 1fr
        grid-template-rows 35px 1fr
        grid-row-gap 20px
        justify-items center